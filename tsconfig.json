{
  "compilerOptions": {
    "target": "ES6",                         
    "module": "commonjs",                    
    "strict": true,                          
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                      
    "moduleResolution": "node",              
    "sourceMap": true,                       
    "lib": ["es6", "dom"],                   
    "resolveJsonModule": true                
  },
  "include": [
    "src/**/*"                               
  ],
  "exclude": [
    "node_modules"                           
  ]
}
